<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/C1">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="@dimen/title_bar_left_layout"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/left_icon"
            style="@style/title_bar_icon_style"
            android:layout_alignParentLeft="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/left_bullet"
            style="@style/title_bar_left_bullet_style"
            android:layout_alignParentRight="true"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/left_subtext"
        style="@style/title_bar_subtext_style"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="subtitle"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="@dimen/title_bar_left_layout"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/right_icon"
            style="@style/title_bar_icon_style"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_bullet"
            style="@style/title_bar_bullet_style"
            android:layout_alignParentRight="true"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        style="@style/title_bar_title_style"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxLength="10"
        android:textColor="@color/common_white" />

    <TextView
        android:id="@+id/right_subtext"
        style="@style/title_bar_subtext_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="subtitle"
        android:visibility="gone" />
</RelativeLayout>
